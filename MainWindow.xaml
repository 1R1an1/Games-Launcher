<Window x:Class="Games_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Games_Launcher"
        xmlns:Views="clr-namespace:Games_Launcher.Views"
        mc:Ignorable="d"
        Title="Games Launcher" Icon="Img/Icon.ico" Height="450" Width="800" Background="{StaticResource Background}"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" WindowStyle="None">


    <Grid>
        <!--#region definicionew-->
        <Grid.RowDefinitions>
            <RowDefinition Height="31"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--#endregion-->
        
        <!--#region controles de usuario-->
        <Views:MainView x:Name="CDU_Window" Grid.Row="1"/>
        <!--#endregion-->
        
        <!--#region Parte De arriba-->
        <Grid Visibility="Visible">
            <!--#region definiciones-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="45"/>
                <ColumnDefinition Width="45"/>
                <!--<ColumnDefinition Width="7"/>-->
            </Grid.ColumnDefinitions>
            <!--#endregion-->
            
            <!-- #region Titulo-->

            <!-- #region Sin imagen -->
            <Label VerticalAlignment="Center"
                   Grid.Column="0" Grid.Row="0"
                   Height="30" Padding="13,8,0,0"
                   Foreground="White"
                   FontFamily="Consolas" FontWeight="Normal" FontSize="12"
                   Content="Games Launcher" MouseDown="MoveWindow"/>
            <!--#endregion-->

            <!--Con imagen-->
            <!--<Label VerticalAlignment="Center"
                   Grid.Column="0" Grid.Row="0"
                   Height="30" Padding="35,8,0,0"
                   Foreground="White"
                   FontFamily="Consolas" FontWeight="Normal" FontSize="12"
                   Content="Games Launcher" MouseDown="MoveWindow"/>
            <Image Source="Img/Icon.ico" HorizontalAlignment="Left" VerticalAlignment="Center"
                   Height="15" Margin="11.5,0,0,0"/>-->
            <!--#endregion-->
            
            <!-- #region Botones minimizar y cerrar-->
            <Button x:Name="b_minimizar" Content="-" Padding="0,0,1000,0"
                    Grid.Column="1" Grid.Row="0"
                    Foreground="White"
                    FontSize="30" Style="{StaticResource ButtonTopStyle-}" Tag="{StaticResource Background}" BorderBrush="{StaticResource NormalColorNormal}"
                    Width="45" Height="31"
                    Cursor="Hand" BorderThickness="0" Click="b_minimizar_Click"/>

            <Button x:Name="b_cerrar" Content="x"
                    Grid.Column="2" Grid.Row="0"
                    FontSize="22" Style="{StaticResource ButtonTopStyleX}" Tag="{StaticResource Background}" BorderBrush="{StaticResource EliminarColorNormal}"
                    Foreground="White" VerticalContentAlignment="Bottom"
                    Width="45" Height="31"
                    Cursor="Hand" BorderThickness="0" Click="b_cerrar_Click"/>

            <Border Margin="0,30.1,0,0"
                    Grid.ColumnSpan="4" Grid.RowSpan="2"
                    BorderThickness=".5" BorderBrush="DimGray"/>
            <!--#endregion-->
        </Grid>
        
        <Border x:Name="borde1" Visibility="Collapsed" Grid.RowSpan="2" BorderThickness=".5" BorderBrush="DimGray"/>
        <!--#endregion-->
    </Grid>
</Window>