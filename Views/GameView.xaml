<UserControl x:Class="Games_Launcher.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Games_Launcher.Views"
             mc:Ignorable="d" 
             d:DesignHeight="90" Width="360" Height="90" d:DesignWidth="360">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="2">
        <Grid>
            <Image x:Name="GameIconIMG"
                   Width="64"
                   Height="64"
                   Source="/ErrorImg.png"
                   Cursor="Hand"
                   HorizontalAlignment="Left"
                   MouseLeftButtonDown="GameIconIMG_MouseLeftButtonDown"
                   Margin="12.5,0,0,0"/>

            <StackPanel VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Margin="0,10,10.5,0"
                        Orientation="Horizontal">

                <StackPanel Orientation="Vertical"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Margin="0,0,0,0">
                    <Label Style="{StaticResource lblSNTNBG}"
                           VerticalAlignment="Top"
                           Padding="2, 0"
                           FontSize="13"
                           Foreground="White"
                           Content="TIEMPO DE JUEGO"/>

                    <Label x:Name="LBLTimeOppend"
                       Style="{StaticResource lblSNTNBG}"
                       VerticalAlignment="Top"
                           FontSize="13"
                       Padding="3, 0"
                       Content="100 minutos"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        Margin="0,0,25,14">

                <Button x:Name="BTNJugar"
                        Style="{StaticResource ButtonStyle}"
                        Tag="{StaticResource JugarColorNormal}"
                        BorderBrush="{StaticResource JugarColorMouseOver}"
                        Foreground="White"
                        Padding="5,1.5"
                        Margin="0,0,23,0"
                        Content="JUGAR" FontSize="17" Click="BTNJugar_Click"/>

                <Button x:Name="BTNEliminar"
                        Style="{StaticResource ButtonStyle}"
                        Tag="{StaticResource EliminarColorNormal}"
                        BorderBrush="{StaticResource EliminarColorMouseOver}"
                        Foreground="White"
                        Padding="5,1.5"
                        Margin="45,0,0,0"
                        Content="ELIMINAR" FontSize="17" Click="BTNEliminar_Click"/>
            </StackPanel>
            <TextBlock x:Name="GameTitleTB"
                       Style="{StaticResource TBK}"
                       VerticalAlignment="Top"
                       Margin="91,10,0,0"
                       Width="120"
                       FontSize="14"
                       TextAlignment="Center"
                       Foreground="White"
                       TextWrapping="Wrap" 
                       HorizontalAlignment="Left"
                       Text="GAME TITLE"/>
        </Grid>
    </Border>
</UserControl>
