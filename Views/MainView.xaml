<UserControl x:Class="Games_Launcher.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Games_Launcher.Views"
             mc:Ignorable="d" 
             d:DesignHeight="419" d:DesignWidth="750">
    <Grid>
        <!--<local:GameView VerticalAlignment="Top" HorizontalAlignment="Center"/>-->
        <Border Margin="0,0,0,70" BorderBrush="{StaticResource FontColor}" BorderThickness="0,0,0,1">
            <ScrollViewer Padding="0,5" VerticalScrollBarVisibility="Visible" BorderBrush="{StaticResource FontColor}">
                <ScrollViewer.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Width" Value="20"/>
                        <Setter Property="Template" Value="{StaticResource VerticalScrollBar}"/>
                    </Style>
                </ScrollViewer.Resources>
                <WrapPanel HorizontalAlignment="Center" Margin="10, 5" VerticalAlignment="Center" x:Name="Juegos"/>
            </ScrollViewer>
        </Border>
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center"
                    Margin="20,0,20,17.5" Orientation="Horizontal">
            
            <Button x:Name="BTNAgregar"
                    Style="{StaticResource ButtonStyle}"
                    FontSize="25"
                    Margin="0,0,5,0"
                    Content="Agregar juego" Click="BTNAgregar_Click"/>
            <Button x:Name="BTNOpenFolder"
                    Style="{StaticResource ButtonStyle}"
                    FontSize="25"
                    Margin="5,0,0,0"
                    Content="📁" Click="BTNOpenFolder_Click"/>
            <Button x:Name="BTNFileDownloader"
                    Style="{StaticResource ButtonStyle}"
                    FontSize="25"
                    Margin="5,0,0,0"
                    Padding="4,3.6"
                    ToolTip="Abre una ventana para descargar un archivo"
                    Click="BTNFileDownloader_Click">
                <Image Source="/Img/downloadIMG.png" Width="30" Height="27"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
